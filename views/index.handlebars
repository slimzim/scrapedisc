  </div>
</nav>

<div class="container">

<!-- ============================================= -->
<!-- ARTICLES -->
<!-- ============================================= -->
  
  <div class="row">
    
    {{#each articleList}}
      
      <div class="card mb-3 mr-3" style="width: 100%">
        <div class="row no-gutters">
          
            <img src="{{img}}" class="card-img" alt="Image" style="width: 250px;">
          
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><a href="{{href}}" target="_blank">{{title}}</a></h5>
              <p class="card-text"><small>{{summary}}...</small></p>
              <button type="button" class="btn btn-primary save-button" data-id="{{_id}}">Save Article</button>
            </div>
          </div>
        </div>
      </div>
      
    {{else}}
      <div class="jumbotron text-center" style="width: 100%">
        <h1 class="display-4">No Articles</h1>
      </div>
    {{/each}}

  </div>

</div>

